<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Preferences">

    <LinearLayout
        android:id="@+id/preferences_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/preference_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Follower Notifications"
            />

        <CheckBox
            android:id="@+id/preference_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Comment Notifications"
            />

        <CheckBox
            android:id="@+id/preference_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Post Notifications"
            />

        <Button
            android:id="@+id/preferences_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            />

        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>